{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "hub_name": {
            "type": "string"
        },
        "sku_name": {
            "type": "string",
            "defaultValue": "S1"
        },
        "dps_name": {
            "type": "string"
        }
    },
    "variables": {
        "linked-template-iot-hub": "https://raw.githubusercontent.com/jevgenij-p/asset-tracking/master/iot-hub.json",
        "linked-template-dps": "https://raw.githubusercontent.com/jevgenij-p/asset-tracking/master/dps.json",
        "iotHubKeyName": "iothubowner"
    },
    "resources": [
        {
            "name": "iothub",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('linked-template-iot-hub')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "hub_name": { "value": "[parameters('hub_name')]" },
                    "sku_name": { "value": "[parameters('sku_name')]" }
                }
            }
        },
        {
            "name": "dps",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments','iothub')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('linked-template-dps')]",
                    "contentVersion": "1.0.0.0"
                },
                "dependsOn": [ "iothub" ],
                "parameters": {
                    "dpsname": { "value": "[parameters('dps_name')]" },
                    "connectionString": {
                        "value": "[concat('HostName=', reference(resourceId('Microsoft.Devices/Iothubs', parameters('hub_name'))).hostName, ';SharedAccessKeyName=', variables('iotHubKeyName'), ';SharedAccessKey=', listkeys(resourceId('Microsoft.Devices/Iothubs/Iothubkeys', parameters('hub_name'), variables('iotHubKeyName')), '2020-03-01').primaryKey)]"
                    },
                    "hostName": {
                        "value": "[reference(resourceId('Microsoft.Devices/Iothubs', parameters('hub_name'))).hostName]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}