{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "hub_name": {
            "type": "string"
        },
        "sku_name": {
            "type": "string",
            "defaultValue": "S1"
        },
        "dps_name": {
            "type": "string"
        }
    },
    "variables": {
        "linked-template-iot-hub": "https://raw.githubusercontent.com/Azure/azure-quickstart-templates/master/quickstarts/microsoft.storage/storage-account-create/azuredeploy.json",
        "linked-template-dps": "https://raw.githubusercontent.com/Azure/azure-docs-json-samples/master/azure-resource-manager/what-if/what-if-before.json"
    },
    "resources": [
        {
            "name": "iot-hub",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('linked-template-iot-hub')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "hub_name": { "value": "[parameters('hub_name')]" },
                    "sku_name": { "value": "[parameters('sku_name')]" }
                }
            }
        },
        {
            "name": "dps",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments','iot-hub')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('linked-template-dps')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "dpsname": { "value": "[parameters('dps_name')]" }
                }
            }
        }
    ],
    "outputs": {}
}