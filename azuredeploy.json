{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "hub_name": {
            "type": "string"
        },
        "hub_sku_name": {
            "type": "string",
            "defaultValue": "S1"
        },
        "hub_sku_units": {
            "type": "string",
            "defaultValue": "1"
        },
        "hub_d2c_partitions": {
            "type": "string",
            "defaultValue": "4"
        },
        "hub_features": {
            "type": "string",
            "defaultValue": "None"
        },
        "hub_tags": {
            "type": "Object",
            "defaultValue": {}
        },
        "dps_name": {
            "type": "string"
        },
        "dps_tags": {
            "type": "Object",
            "defaultValue": {}
        }
    },
    "resources": [
        {
            "apiVersion": "2021-03-31",
            "type": "Microsoft.Devices/IotHubs",
            "name": "[parameters('hub_name')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "eventHubEndpoints": {
                    "events": {
                        "retentionTimeInDays": 1,
                        "partitionCount": "[parameters('hub_d2c_partitions')]"
                    }
                },
                "features": "[parameters('hub_features')]"
            },
            "sku": {
                "name": "[parameters('hub_sku_name')]",
                "capacity": "[parameters('hub_sku_units')]"
            },
            "tags": "[parameters('hub_tags')]"
        },
        {
            "type": "Microsoft.Security/IoTSecuritySolutions",
            "apiVersion": "2019-08-01",
            "name": "[parameters('hub_name')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "status": "Enabled",
                "unmaskedIpLoggingStatus": "Enabled",
                "displayName": "[parameters('hub_name')]",
                "iotHubs": [
                    "[resourceId('Microsoft.Devices/IotHubs', parameters('hub_name'))]"
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Devices/IotHubs', parameters('hub_name'))]"
            ]
        },
        {
            "type": "Microsoft.Devices/ProvisioningServices",
            "apiVersion": "2020-03-01",
            "name": "[parameters('dps_name')]",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('dps_tags')]",
            "sku": {
                "name": "S1",
                "tier": "Standard",
                "capacity": 1
            },
            "properties": {
                
            },
            "dependsOn": [
                "[resourceId('Microsoft.Devices/IotHubs', parameters('hub_name'))]"
            ]
        }
    ],
    "outputs": {}
}