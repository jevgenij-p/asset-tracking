{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "dpsname": {
            "type": "String"
        },
        "iotHubId": {
            "type": "string"
        },
        "iotHubKeysId": {
            "type": "string"
        },
        "tags": {
            "type": "Object",
            "defaultValue": {}
        }
    },
    "variables": {
        "iotHubKeyName": "iothubowner"
    },
    "resources": [
        {
            "type": "Microsoft.Devices/ProvisioningServices",
            "apiVersion": "2020-03-01",
            "name": "[parameters('dpsname')]",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tags')]",
            "sku": {
                "name": "S1",
                "tier": "Standard",
                "capacity": 1
            },
            "properties": {
                "iotHubs": [
                    {
                        "connectionString": "[concat('HostName=', reference(parameters('iotHubId')).hostName, ';SharedAccessKeyName=', variables('iotHubKeyName'), ';SharedAccessKey=', listkeys(parameters('iotHubKeysId'), '2020-03-01').primaryKey)]",
                        "location": "[resourceGroup().location]",
                        "name": "[reference(parameters('iotHubId')).hostName]"
                    }
                ]
            }
        }
    ]
}